package Practice;

public class q4 
{
	public static void main(String[] args) 
	{
		int arr1[] = {1, 2};
		int arr2[] = {3, 4};
		
		System.out.println("Res : " + findMedianSortedArrays(arr1, arr2));
	}
	
	private static double findMedianSortedArrays(int arr1[], int arr2[])
	{
		double sum = 0;
		
		for(int i = 0; i < arr1.length; i++)
		{
			sum += arr1[i];
		}// for
		
		for(int i = 0; i < arr2.length; i++)
		{
			sum += arr2[i];
		}// for
		
		return sum / len;
	}
}
